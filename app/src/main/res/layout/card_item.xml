<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:padding="15dp"
    android:layout_margin="8dp"
    >

        <TextView
            android:id="@+id/campoNomeTitular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/vencimento"

            >

        </TextView>

        <TextView
            android:id="@+id/campoNumeroCartao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/campoNomeTitular"
            app:layout_constraintBottom_toTopOf="@id/vencimento"
            android:text="Number"
            android:textSize="20dp"
            android:textColor="@color/white"
            >

        </TextView>

        <TextView
            android:id="@+id/vencimento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vencimento"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/campoNumeroCartao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/campoCVV"
            >

        </TextView>

        <TextView
            android:id="@+id/campoCVV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Codigo de Segurança"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/vencimento"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvColorcard"
            >

        </TextView>

        <TextView
            android:id="@+id/tvColorcard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cor do cartão"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/campoCVV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

        </TextView>



    </androidx.constraintlayout.widget.ConstraintLayout>



